{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "sourceMap": false,
      "inlineSourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }